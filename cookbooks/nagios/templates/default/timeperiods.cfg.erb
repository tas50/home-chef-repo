# Time period definitions
# Automatically generated by Chef

define timeperiod {
  timeperiod_name 24x7
  alias           24 Hours A Day, 7 Days A Week
  sunday          00:00-24:00
  monday          00:00-24:00
  tuesday         00:00-24:00
  wednesday       00:00-24:00
  thursday        00:00-24:00
  friday          00:00-24:00
  saturday        00:00-24:00
}

<% @timeperiods.each do |timeperiod| -%>
<% if timeperiod == @timeperiods.first -%># Time periods defined by data bags<% end -%>
define timeperiod {
  timeperiod_name  <%= timeperiod['id'] %>
  alias            <%= timeperiod['alias'] %>
<%   timeperiod['times'].each do |conf| -%>
  <%= conf %>
<%   end -%>
}
<% end -%>
